<script>
  $('#user_star').raty({
    user_rating: <%= @rating.user_rating %>,
    path: '/assets',
    click: function (user_rating, evt) {
      $.ajax({
        url: '/ratings/' + <%= @rating.id %>,
        type: 'PATCH',
        data: {user_rating: user_rating}
      });
    }
  });
</script>
