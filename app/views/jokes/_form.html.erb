<%= bootstrap_form_for(joke) do |f| %>
  <% if joke.errors.any? %>
    <div class="alert alert-danger">
      <% joke.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_area :content %>
  </div>

  <div class="field">
    <%= f.text_field :category_id %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
