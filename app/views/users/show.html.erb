<table class="table table-responsive">
  <thead>
  <tr>
    <th>Kategórie</th>
    <th>Obľúbenosť</th>
  </tr>
  </thead>

  <tbody>
  <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <% percentage = @category_hash[category.id].length * 100 / 20 %>
          <!--<div class="progress ">-->
            <div class="progress-bar progress-bar-striped" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width: <%=percentage%>% ">
              <span class="progress-value"><%= percentage %>%</span>
            </div>
          <!--</div>-->
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
