<table class="table table-responsive">
  <thead>
  <tr>
    <th>Kategórie</th>
    <th>Priemerné hodnotenie</th>
    <th>Ohodnotené</th>
  </tr>
  </thead>

  <tbody>
  <% @cc.each do |cc| %>
      <tr>
        <td><%= cc.category.name %></td>
        <td><%= (cc.total_rate / cc.total_rated_jokes.to_f).round(1) %></td>
        <td>
          <% percentage = cc.total_rated_jokes * 100 / 20 %>
          <!--<div class="progress ">-->
            <div class="progress-bar progress-bar-striped" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width: <%=percentage%>% ">
              <span class="progress-value"><%= percentage %>%</span>
            </div>
          <!--</div>-->
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
